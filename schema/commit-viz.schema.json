{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "commit-viz interchange format",
  "type": "object",
  "required": ["metadata", "branches", "commits", "merges"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["repo", "date_range", "generated_at"],
      "properties": {
        "repo": { "type": "string" },
        "date_range": {
          "type": "object",
          "required": ["start", "end"],
          "properties": {
            "start": { "type": "string" },
            "end": { "type": "string" }
          }
        },
        "generated_at": { "type": "string", "format": "date-time" }
      }
    },
    "branches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "is_default"],
        "properties": {
          "name": { "type": "string" },
          "is_default": { "type": "boolean" }
        }
      }
    },
    "commits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sha", "author", "timestamp", "branch", "message", "parents"],
        "properties": {
          "sha": { "type": "string" },
          "author": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "branch": { "type": "string" },
          "message": { "type": "string" },
          "parents": {
            "type": "array",
            "items": { "type": "string" }
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "conventional_type": {
            "type": ["string", "null"]
          },
          "ticket_id": { "type": ["string", "null"] },
          "insertions": { "type": "integer", "default": 0 },
          "deletions": { "type": "integer", "default": 0 },
          "files_changed": { "type": "integer", "default": 0 },
          "category": {
            "type": "string",
            "enum": ["feature", "bugfix", "docs", "refactor", "ci", "test", "release", "other"],
            "default": "other"
          }
        }
      }
    },
    "merges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sha", "from_branch", "to_branch", "timestamp"],
        "properties": {
          "sha": { "type": "string" },
          "from_branch": { "type": "string" },
          "to_branch": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    },
    "statistics": {
      "type": ["object", "null"],
      "properties": {
        "total_commits": { "type": "integer" },
        "date_span_days": { "type": "integer" },
        "commits_per_week": { "type": "number" },
        "unique_authors": { "type": "integer" },
        "by_category": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        },
        "by_branch": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        },
        "top_authors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "author": { "type": "string" },
              "commits": { "type": "integer" }
            }
          }
        },
        "release_cycles": {
          "type": "object",
          "properties": {
            "count": { "type": "integer" },
            "mean_days": { "type": "number" },
            "min_days": { "type": "number" },
            "max_days": { "type": "number" },
            "stdev_days": { "type": "number" }
          }
        }
      }
    },
    "deployments": {
      "type": "array",
      "items": { "type": "object" }
    },
    "ci_runs": {
      "type": "array",
      "items": { "type": "object" }
    }
  }
}
