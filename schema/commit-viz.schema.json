{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "commit-viz interchange format",
  "type": "object",
  "required": ["metadata", "branches", "commits", "merges"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["repo", "date_range", "generated_at"],
      "properties": {
        "repo": { "type": "string" },
        "date_range": {
          "type": "object",
          "required": ["start", "end"],
          "properties": {
            "start": { "type": "string" },
            "end": { "type": "string" }
          }
        },
        "generated_at": { "type": "string", "format": "date-time" }
      }
    },
    "branches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "is_default"],
        "properties": {
          "name": { "type": "string" },
          "is_default": { "type": "boolean" }
        }
      }
    },
    "commits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sha", "author", "timestamp", "branch", "message", "parents"],
        "properties": {
          "sha": { "type": "string" },
          "author": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "branch": { "type": "string" },
          "message": { "type": "string" },
          "parents": {
            "type": "array",
            "items": { "type": "string" }
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "conventional_type": {
            "type": ["string", "null"]
          },
          "ticket_id": { "type": ["string", "null"] },
          "insertions": { "type": "integer", "default": 0 },
          "deletions": { "type": "integer", "default": 0 },
          "files_changed": { "type": "integer", "default": 0 },
          "category": {
            "type": "string",
            "enum": ["feature", "bugfix", "docs", "refactor", "ci", "test", "release", "other"],
            "default": "other"
          }
        }
      }
    },
    "merges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sha", "from_branch", "to_branch", "timestamp"],
        "properties": {
          "sha": { "type": "string" },
          "from_branch": { "type": "string" },
          "to_branch": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    },
    "statistics": {
      "type": ["object", "null"],
      "properties": {
        "total_commits": { "type": "integer" },
        "date_span_days": { "type": "integer" },
        "commits_per_week": { "type": "number" },
        "unique_authors": { "type": "integer" },
        "by_category": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        },
        "by_branch": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        },
        "top_authors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "author": { "type": "string" },
              "commits": { "type": "integer" }
            }
          }
        },
        "release_cycles": {
          "type": "object",
          "properties": {
            "count": { "type": "integer" },
            "mean_days": { "type": "number" },
            "min_days": { "type": "number" },
            "max_days": { "type": "number" },
            "stdev_days": { "type": "number" }
          }
        },
        "waste_metrics": {
          "type": ["object", "null"],
          "properties": {
            "commit_to_release_days": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "date": { "type": "string" },
                  "avg_days_to_release": { "type": "number" },
                  "commit_count": { "type": "integer" },
                  "unreleased_count": { "type": "integer" }
                }
              }
            },
            "release_median_latency": { "type": "number" },
            "release_p90_latency": { "type": "number" },
            "release_pct_within_7d": { "type": "number" },
            "branch_lifespans": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "branch": { "type": "string" },
                  "first_commit": { "type": "string" },
                  "last_commit": { "type": "string" },
                  "lifespan_days": { "type": "number" },
                  "merged": { "type": "boolean" },
                  "commit_count": { "type": "integer" }
                }
              }
            },
            "branch_median_lifespan": { "type": "number" },
            "branch_unmerged_count": { "type": "integer" },
            "branch_longest_days": { "type": "number" },
            "daily_velocity": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "date": { "type": "string" },
                  "count": { "type": "integer" },
                  "dominant_category": { "type": "string" }
                }
              }
            },
            "rolling_7day_avg": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "date": { "type": "string" },
                  "avg": { "type": "number" }
                }
              }
            },
            "drought_periods": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "start_date": { "type": "string" },
                  "end_date": { "type": "string" },
                  "duration_days": { "type": "integer" }
                }
              }
            },
            "drought_count": { "type": "integer" },
            "longest_drought_days": { "type": "integer" },
            "total_drought_days": { "type": "integer" },
            "commit_merge_latency": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "sha": { "type": "string" },
                  "commit_date": { "type": "string" },
                  "days_to_merge": { "type": ["number", "null"] },
                  "lines_changed": { "type": "integer" },
                  "category": { "type": "string" }
                }
              }
            },
            "merge_median_latency": { "type": "number" },
            "merge_pct_within_7d": { "type": "number" },
            "merge_pct_within_30d": { "type": "number" },
            "release_intervals": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "tag": { "type": "string" },
                  "date": { "type": "string" },
                  "days_since_previous": { "type": "number" }
                }
              }
            },
            "release_interval_distribution": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "label": { "type": "string" },
                  "min_val": { "type": "number" },
                  "max_val": { "type": "number" },
                  "count": { "type": "integer" }
                }
              }
            },
            "release_interval_mean": { "type": "number" },
            "release_interval_median": { "type": "number" },
            "release_interval_cv": { "type": "number" },
            "release_interval_longest_gap": { "type": "number" },
            "work_disposition": {
              "type": "object",
              "properties": {
                "fast_merged_lines": { "type": "integer" },
                "slow_merged_lines": { "type": "integer" },
                "unmerged_lines": { "type": "integer" },
                "fast_merged_commits": { "type": "integer" },
                "slow_merged_commits": { "type": "integer" },
                "unmerged_commits": { "type": "integer" },
                "segments": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "category": { "type": "string" },
                      "merge_speed": { "type": "string" },
                      "lines_changed": { "type": "integer" },
                      "commit_count": { "type": "integer" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "deployments": {
      "type": "array",
      "items": { "type": "object" }
    },
    "ci_runs": {
      "type": "array",
      "items": { "type": "object" }
    }
  }
}
